{
    "compilerOptions": {
        "target": "ES6",
        "sourceMap": true,
        "noUnusedLocals": true,
        "module": "ES6",
        "rootDir": "./src",
        "outDir": "./dist",
        "removeComments": true,
        "noEmitOnError": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "esModuleInterop": true
    },
    "include": ["src"]
}